<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.allstarproduction.smart_maisto_pristatymas">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SMART Maisto Pristatymas"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterController"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".OrdersController"
            android:label="@string/title_activity_orders"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManagerController"
            android:label="@string/title_activity_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DispatcherController"
            android:label="@string/title_activity_dispecher"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OrderController"
            android:label="@string/title_activity_order"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".DriverController"
            android:label="@string/title_activity_driver_controller" />
        <activity android:name=".DriversController" />
        <activity android:name=".UserController" />
        <activity android:name=".RoleController" />
        <activity android:name=".AdminController" />
        <activity
            android:name=".SupplierController"
            android:label="@string/title_activity_supplier"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PaymentController" />
        <activity android:name=".StatisticsController"></activity>
    </application>

</manifest>